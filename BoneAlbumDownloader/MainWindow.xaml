<Window x:Class="BoneAlbumDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoneAlbumDownloader"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Title="BoneLoader" Height="591" Width="575" Icon="Pics/cursor.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="557*"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>
        <Image x:Name="backgroundImage" HorizontalAlignment="Center" VerticalAlignment="Top" Source="/Cover/bg.jpg" Stretch="UniformToFill" Grid.Row="1" Grid.RowSpan="2"/>
        <ComboBox x:Name="cmbAlbum" Margin="0,140,0,0" SelectionChanged="cmbAlbum_SelectionChanged" Grid.Row="1" Height="22" VerticalAlignment="Top" HorizontalAlignment="Center" Width="153" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="txtLink" HorizontalAlignment="Center" Margin="0,458,0,0" TextWrapping="Wrap" Background="#FF040404" Foreground="White" BorderBrush="{x:Null}" Grid.Row="1" Text="select an album" HorizontalContentAlignment="Center" GotFocus="changeDownload_Click" VerticalAlignment="Top"/>
        <Label x:Name="downloading" Content="link copied to clipboard" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="White" Visibility="Visible" Grid.Row="1" Background="Black" VerticalAlignment="Center" Grid.RowSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" Background="Black" Height="42" Margin="0,0,287,0"/>
        <WrapPanel Grid.RowSpan="2" Margin="0,7,0,500">
            <Menu x:Name="Hoofdmenu" Foreground="White" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="50" Width="575" >
                <Menu.Background>
                    <SolidColorBrush Color="Black" Opacity="0.465"/>
                </Menu.Background>
                <MenuItem x:Name="mnuClick" Header="CopyLatestLink" IsCheckable="True" Click="clickClip_Click" Padding="10,0,10,0" Margin="5,0,5,0" BorderBrush="White"/>
                <MenuItem x:Name="mnuChange" Header="ChangeDownloadLocation" Click="changeDownload_Click" Margin="5,0,5,0" Padding="10,0,10,0" BorderBrush="White"/>
                <MenuItem x:Name="mnuCopy" Header="CopyDriveLink" Click="copyDrive_Checked" Margin="5,0,5,0" Padding="10,0,10,0" BorderBrush="White"/>
                <MenuItem x:Name="mnuchange" Header="ChangeCursor" Click="mnuchange_Click" Padding="10,0,10,0" BorderBrush="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
            </Menu>
        </WrapPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button Content="▶︎" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Click" VerticalContentAlignment="Center" Margin="10,0,10,0" Padding="10,1,10,1" Background="Black" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="| |" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_1" Margin="10,0,10,0" Padding="10,1,10,1" Foreground="White" Background="Black">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="▶︎| |" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_2" Margin="10,0,10,0" Padding="10,1,10,1" Foreground="White" Background="Black">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </WrapPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="_" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_4" Margin="10,0,10,0" Padding="10,1,10,1" Foreground="White" Background="Black">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="X" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Click_3" VerticalContentAlignment="Center" Margin="10,0,10,0" Padding="10,1,10,1" Background="Black" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </WrapPanel>
    </Grid>
</Window>
